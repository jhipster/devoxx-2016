<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
            />

    <cache name="io.github.jhipster.store.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>
    
    <cache name="io.github.jhipster.store.domain.WishList"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Wish"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Category"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Category.subcategories"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.SubCategory"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.SubCategory.products"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Product"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Product.subcategories"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Brand"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="io.github.jhipster.store.domain.Brand.products"
        timeToLiveSeconds="3600">
    </cache>

    <!-- jhipster-needle-ehcache-add-entry -->
</ehcache>
